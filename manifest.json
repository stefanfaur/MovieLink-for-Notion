{
  "manifest_version": 3,
  "name": "QuickMovie for Notion",
  "version": "1.0",
  "description": "Replace movie names in Notion with their IMDb links using the OMDB API.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "clipboardWrite",
    "clipboardRead"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "commands": {
    "replace-movie-name": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "MacCtrl+Shift+R"
      },
      "description": "Replace selected movie name with IMDb link"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
